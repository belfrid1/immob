<div class="col-md-12">
    <div class="card ">
        <div class="card-header card-header-rose card-header-text">
            <div class="card-text">
                <h4 class="card-title">{{ title }}</h4>
            </div>
        </div>
        <div class="card-body ">
            {{ form_start(form) }}

            <div class="row">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    <div class="form-group">
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                {{ form_label(form.prenom, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    <div class="form-group">
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.prenom) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                {{ form_label(form.adresse, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    <div class="form-group">
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.adresse) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                {{ form_label(form.telephone, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    <div class="form-group">
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.telephone) }}
                        </div>
                    </div>
                </div>
            </div>


            <button class="btn">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

