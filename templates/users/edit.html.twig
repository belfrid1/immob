{% extends '/backoffice/layout/base.html.twig' %}

{% block body %}
    <div class="wrapper ">
    <!-- sidebar -->
    {% include 'backoffice/layout/sidebar.html.twig' %}
    <!-- sidebar -->

    <div class="main-panel">
        <!-- Navbar -->
        {% include 'backoffice/layout/navbar.html.twig' %}
        <!-- End Navbar -->
        <!-- content -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    {{ include('users/_form.html.twig', {'title': 'Modification d\'un utilisateur '}) }}
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <a class="btn" href="{{ path('users_index') }}">Liste des utilisateurs</a>
                        {% if app.user.id != user.id %}
                            <a href="#" onclick="event.preventDefault(); document.getElementById('logout-form').submit();" class="btn">Delete</a>
                            {{ include('users/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            </div>
            <!-- content -->
            <!-- footer -->
            {% include 'backoffice/layout/footer.html.twig' %}
            <!-- footer -->
        </div>
    </div>
{% endblock %}