<div class="col-md-12">
    <div class="card ">
        <div class="card-header card-header-rose card-header-text">
            <div class="card-text">
            <h4 class="card-title">{{ title }}</h4>
            </div>
        </div>
        <div class="card-body ">
            {{ form_start(form) }}
                <div class="row">
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        <div class="form-group">
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error">
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    {{ form_label(form.surface, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        <div class="form-group">
                            {{ form_widget(form.surface, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error">
                                {{ form_errors(form.surface) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    {{ form_label(form.piece, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        <div class="form-group">
                            {{ form_widget(form.piece, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error">
                                {{ form_errors(form.piece) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    {{ form_label(form.proprietaire, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        <div class="form-group">
                            {{ form_widget(form.proprietaire, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error">
                                {{ form_errors(form.proprietaire) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    {{ form_label(form.ville, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        <div class="form-group">
                            {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error">
                                {{ form_errors(form.ville) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    {{ form_label(form.etat, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        <div class="form-group">
                            {{ form_widget(form.etat, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error">
                                {{ form_errors(form.etat) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    {{ form_label(form.tranche, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        <div class="form-group">
                            {{ form_widget(form.tranche, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error">
                                {{ form_errors(form.tranche) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    {{ form_label(form.type_bien, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        <div class="form-group">
                            {{ form_widget(form.type_bien, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error">
                                {{ form_errors(form.type_bien) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-offset-6 col-md-6">
                        {{ form_widget(form.images) }}
                    </div>

                </div>

                {% if app.request.attributes.get('_route') == 'bien_edit' and bien.images|length %}
                    <h2>Images</h2>
                    <div class="row">
                        {% for image in bien.images %}
                            <div class="col-md-4 col-sm-4">
                                <div class="card card-product">
                                    <img height="200" width="auto" class="img" src="{{ asset(image.chemin ~ '/' ~ image.nom) }}">
                                </div>
                                <div>
                                    <a href="{{ path('bien_delete_image', {id: image.id})}}" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput" data-delete data-token="{{ csrf_token('delete' ~ image.id )}}"><i class="fa fa-times"></i> Remove</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}

                <button class="btn">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
