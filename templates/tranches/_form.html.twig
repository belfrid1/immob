<div class="col-md-12">
    <div class="card ">
        <div class="card-header card-header-rose card-header-text">
            <div class="card-text">
                <h4 class="card-title">{{ title }}</h4>
            </div>
        </div>
        <div class="card-body ">
            {{ form_start(form) }}
            <div class="row">
                {{ form_label(form.prix_min, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    <div class="form-group">
                        {{ form_widget(form.prix_min, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.prix_min) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                {{ form_label(form.prix_max, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    <div class="form-group">
                        {{ form_widget(form.prix_max, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.prix_max) }}
                        </div>
                    </div>
                </div>
            </div>

            <button class="btn">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

