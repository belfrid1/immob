{% extends '/backoffice/layout/base.html.twig' %}

{% block body %}
    <div class="wrapper ">
        <!-- sidebar -->
        {% include 'backoffice/layout/sidebar.html.twig' %}
        <!-- sidebar -->

        <div class="main-panel">
            <!-- Navbar -->
            {% include 'backoffice/layout/navbar.html.twig' %}
            <!-- End Navbar -->
            <!-- content -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header card-header-primary">
                                    <h4 class="card-title ">Tranches</h4>
                                    <p class="card-category"><a href="{{ path('tranches_new') }}"><i class="material-icons"></i> Creer une nouvelle tranche</a></p>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Prix min</th>
                                                <th>Prix max</th>
                                                <th>actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for tranche in tranches %}
                                                <tr>
                                                    <td>{{ tranche.id }}</td>
                                                    <td>{{ tranche.prixMin }}</td>
                                                    <td>{{ tranche.prixMax }}</td>
                                                    <td>
                                                        <a href="{{ path('tranches_show', {'id': tranche.id}) }}">show</a>
                                                        <a href="{{ path('tranches_edit', {'id': tranche.id}) }}">edit</a>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="5">no records found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content -->
            <!-- footer -->
            {% include 'backoffice/layout/footer.html.twig' %}
            <!-- footer -->
        </div>
    </div>


{% endblock %}

